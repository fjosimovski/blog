<%= form_for(@post) do |f| %>
 <%= render 'errors' %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit 'Save',  class: "btn btn-primary" %>
  </div>
<% end %>